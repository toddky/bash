
set editing-mode vi
set keymap vi

set keymap vi-command
H: beginning-of-line
L: end-of-line

set keymap vi-insert
#"\C-j": next-history
#"\C-k": previous-history
"\C-j": history-search-forward
"\C-k": history-search-backward

# TODO: Figure out how to make this work
# Change cursor shape for mode
#set show-mode-in-prompt on
#set vi-ins-mode-string \1\e[6 q\2
#set vi-cmd-mode-string \1\e[2 q\2

# Single-tab to show completions
set show-all-if-unmodified on

#set colored-stats On
#set visible-stats On

# Prompt
# https://gist.github.com/sebastiancarlos/b3668160d793d7cb3552cef57000755a
# Insert mode prompt
set vi-ins-mode-string "\1\e[30;44m\2 INS \1\e[0m\2 "
# Normal mode prompt
set vi-cmd-mode-string "\1\e[30;47m\2 NOR \1\e[0m\2 "

